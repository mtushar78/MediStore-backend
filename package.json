{
  "name": "medistore-backend",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "seed:admin": "ts-node-dev --transpile-only src/scripts/seedAdmin.ts",
    "seed:catalog": "ts-node-dev --transpile-only src/scripts/seedCatalog.ts",
    "seed:all": "ts-node-dev --transpile-only src/scripts/seedAll.ts",
    "update:images": "ts-node-dev --transpile-only src/scripts/updateMedicineImages.ts",
    "migrate": "ts-node-dev --transpile-only src/scripts/migrate.ts",
    "migrate:deploy": "prisma migrate deploy --schema=prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=prisma/schema.prisma",
    "build": "prisma generate --schema=prisma/schema.prisma && tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "postinstall": "prisma generate --schema=prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "prisma": "^5.22.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
